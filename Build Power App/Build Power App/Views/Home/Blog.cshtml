                                                    foreach (var aut in ViewBag.users)
                                                    {
                                                        if (item.AuthorID == aut.ID)
                                                        {
                                                            roleid = aut.RoleID;

                                                        }
                                                    }
                                                    foreach (var role in ViewBag.roles)
                                                    {
                                                        if (role.ID == roleid)
