@model Build_Power_App.Product

<div class="modal-content" style="width:900px; position: absolute; left: -130px;  overflow-y: auto;">
    <div class="modal-header" style="border-bottom:0;    padding-top: 40px; margin-top:-15px;">
        <h3 style="right: 30px; top: 5px; position: absolute;"><button class="close" data-dismiss="modal" area-hidden="true" style="padding:0;"><i class="material-icons" style="font-size: 36px; color: red; border-color: red; background: antiquewhite; padding:0;">close</i></button></h3>

    </div>
    <div class="modal-body" style="padding: 10px;
    padding-top: 0px;   overflow-y: auto !important;">


        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-text card-header-success">
                    <div class="card-text">
                        <h5 class="card-title">Detail Form </h5>
                    </div>
                </div>
                <div class="card-body" style="padding-top:15px">

                    <div>

                        <div class="form-row">
                            <div class="form-group col-md-6">

                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Name)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Price)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Price)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.SalePrice)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.SalePrice)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.language)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.language)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.code)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.code)
                                    </dd>

                                </dl>
                            </div>
                            <div class="form-group col-md-6">

                                <dl class="dl-horizontal">


                                    <dt>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Description)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Picture)
                                    </dt>

                                    <dd>

                                        <img src="@Url.Content(Model.Picture)" style="width:400px; height:250px;  object-fit: contain;" alt="" />
                                    </dd>



                                </dl>
                            </div>
                        </div>





                        <form style="margin-top: -80px;">
                            <input type="hidden" class="fadeIn fourth btn btn-success" name="id" value="@ViewBag.model.ID">
                            <input type="submit" class="fadeIn fourth btn btn-success" data-dismiss="modal" area-hidden="true" id="show_first" value="Close">

                        </form>

                    </div>
                </div>
            </div>


        </div>
    </div>

</div>

