

@model Build_Power_App.User

<div class="modal-content" style="width:900px; position: absolute; left: -130px;  overflow-y: auto;">
    <div class="modal-header" style="border-bottom:0;    padding-top: 40px; margin-top:-15px;">
        <h3 style="right: 30px; top: 5px; position: absolute;"><button class="close" data-dismiss="modal" area-hidden="true" style="padding:0;"><i class="material-icons" style="font-size: 36px; color: red; border-color: red; background: antiquewhite; padding:0;">close</i></button></h3>

    </div>
    <div class="modal-body" style="padding: 10px;
    padding-top: 0px;   overflow-y: auto !important;">


        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-text card-header-success">
                    <div class="card-text">
                        <h5 class="card-title">Are you sure you want to delete this? </h5>
                    </div>
                </div>
                <div class="card-body" style="padding-top:15px">

                    <div>

                        <div class="form-row">
                            <div class="form-group col-md-6">

                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Firstname)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Firstname)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Lastname)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Lastname)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.RoleID)
                                    </dt>

                                    <dd>
                                        @ViewBag.roles
                                    </dd>


                                    <dt>
                                        @Html.DisplayNameFor(model => model.DateTime)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.DateTime)
                                    </dd>


                                </dl>
                            </div>
                            <div class="form-group col-md-6">

                                <dl class="dl-horizontal">

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Email)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Phonenumber)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Phonenumber)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Username)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Username)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Password)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Password)
                                    </dd>



                                </dl>
                            </div>
                        </div>






                        <form action="/User/DeleteUsers" method="post">
                            <input type="hidden" class="fadeIn fourth btn btn-danger" name="id" value="@ViewBag.model.ID">
                            <input type="submit" class="fadeIn fourth btn btn-danger" value="Delete">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel </button>
                        </form>
                    </div>
                </div>
            </div>


        </div>
    </div>

</div>
