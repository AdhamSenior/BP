
@{
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}


@{
    if (Build_Power_App.App_Start.Control.isRu == true)
    {
        <div class="section header-stick" style="margin-top:0px !important; margin-bottom:0px;">
            <h2 class="center nobottommargin ls1">Наш контакт</h2>
        </div>
        <script type="text/javascript"
                src="http://code.jquery.com/jquery-latest.js">
        </script>

        <script type="text/javascript">
        $(document).ready(function() {
            $('#bbbb').click(function () {
                setTimeout(function () { location.reload(); }, 5000);
                location.reload();
            });
        });
        </script>


        <img src="~/Content/BP/additional-assets/mappp.png" style="width: 100%;
    object-fit: contain;
    height: 345px; ">


