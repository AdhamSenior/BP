    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <div class="wrapper ">
        <div class="sidebar" data-color="azure" data-background-color="white">
            <div class="logo">
                
                <a href="/Home/Index" class="simple-text logo-normal" target="_blank">
                    <img src="~/content/images/fav.png" alt="Logo" style="width: 50px;margin-left: -40px; padding-left: 0px;  margin-top: -8px;"> Build Power
                </a>
            </div>
            <div class="sidebar-wrapper ps-container ps-theme-default" data-ps-id="90aed0a9-633a-eff6-345e-16b35d406d2c">
                @{
                    if (Build_Power_App.App_Start.Control.user.RoleID == 1)
                    {
                        <ul class="nav">
                            
                            <li class="nav-item ">
                                <a class="nav-link" href="/Order/orders">
                                    <i class="material-icons">shopping_cart</i>
                                    <p>Orders</p>
                                </a>
                            </li>
                            

                        </ul>
                    }
                    else
                    {
                        <ul class="nav">
                            <li class="nav-item ">
                                <a class="nav-link" href="/Admin/Index">
                                    <i class="material-icons">dashboard</i>
                                    <p>Dashboard</p>
                                </a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link" href="/Order/orders">
                                    <i class="material-icons">shopping_cart</i>
                                    <p>Orders</p>
                                </a>
                            </li>
                            <li class="nav-item ">
